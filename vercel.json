{
    "version": 2,
    "builds": [
        {
            "src": "frontend/**/*",
            "use": "@vercel/static"
        },
        {
            "src": "server/server.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "server/server.js"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/$1"
        }
    ],
    "env": {
        "MONGODB_URI": "@mongodb-uri",
        "JWT_SECRET": "@jwt-secret"
    }
}